{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"],
      "@entities/*": ["src/entities/*"],
      "@dto/*": ["src/dto/*"],
      "@services/*": ["src/services/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": false
  },
  "include": ["src/**/*", "src/**/*.entity.ts"],
  "exclude": ["node_modules"]
}